{% layout "default" %}
{% block meta %}
<meta name="og:title" content="{{ title }}">
<meta name="og:description" content="{% excerpt content %}">
<meta name="og:type" content="article">
<meta name="og:url" content="https://friendmeat/{{ date | slugifyDate }}/{{ title | slugify }}/">
{% if img %}<meta name="og:image" content="{{img}}" > {% endif %}
<title>{{title}} - Friendmeat</title>
{% endblock %}
{% block content %}
<small>{{date|date:"%Y-%m-%d"}}</small>
<hr />
<div class="post-content max-w-120">
  {% if img %}  
  <div class="w-full my-3">
      <img src="{{ img }}" class="h-80 mx-auto py-4">
    </div>
    <hr />
  {% endif %}
    {{ content }}
  </div>
{% endblock %}