<div class="container blog-post" id="post-{{ forloop.i }}">
  <a href="{{ post.url }}" class="group">
    {% if post.data.img %}
      <div class="relative overflow-hidden h-32">
        <h2 class="absolute z-50 bottom-0 m-3 font-black transition-all ease-in group-hover:bg-zinc-400 group-hover:text-slate-900">{{ post.data.title }}</h2>
        <div class="absolute z-40 w-full h-32 from-0% bg-gradient-to-t via-50% from-slate-900 to-transparent to-100%"></div>
        <img
          src="{{ post.data.img }}"
          alt="{{ post.data.alt }}"
          class="absolute -top-[150%] min-w-full transition-all ease-in opacity-50 group-hover:opacity-100" />
      </div>
    {% else %}
      <div class="group">
        <h2 class="transition-all ease-in group-hover:bg-zinc-400 group-hover:text-slate-900">{{ post.data.title }}</h2>
      </div>
    {% endif %}
  </a>
  <div class="excerpt py-8">
    {% excerpt post.content %}
  </div>
</div>
{% if not forloop.last %}
  <hr/>
{% endif %}