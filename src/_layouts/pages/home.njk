{% extends "src/_layouts/default.njk" %}
{# Omit breadcrumb and title on Homepage #}
{% block breadcrumb %}{% endblock %}
{% block title %}{% endblock %}
{% block content %}
    <section class="home__container">
        <div
            class="home__the-meat-container">
            {# <img eleventy:ignore class="home__the-meat hueshift" src="/assets/img/lambchop.svg" alt="Clip art of a lamb chop"/> #}
            <span class="home__the-meat hueshift">{% include "src/_includes/parts/meat.njk" %}</span>
            <h1 class="home__title font-revenge text-center">
                {% for c in "FRIENDMEAT" -%}
                    <span class="hueshift">{{ c }}</span>
                {%- endfor %}
            </h1>
        </div>
        {{ content | safe }}
        <div class="home__latest-posts">
				<h2>Latest Posts
				<a href="{{ meta.base }}/feed.xml">{% icon "heroicons:rss", class="rss_button" %}</a>
				</h2>
        {% include "src/_includes/parts/latest_posts.njk" %}
        </div>
        {# 
				<h2>Badges</h2> 
				{% include "src/_includes/layout/badges.njk" %}
		#}
    </section>
{% endblock content %}
